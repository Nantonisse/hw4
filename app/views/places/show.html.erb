<h1><%= @place["name"] %></h1>

<% if @current_user %>
  <div class="mt-4">
    <h2>My Posts</h2>
    <div class="row mt-3">
      <% for post in @posts %>
        <div class="col-md-4 col-sm-12">
          <h3><%= post["title"] %></h3>
          <h4><%= post["posted_on"] %></h4>
          <p><%= post["description"] %></p>
        </div>
      <% end %>
    </div>
  </div>

  <button type="button" class="btn btn-outline-primary"><a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a></button>
<% end %>

<p>
  <a href="/places">Back to All Places</a>
</p>